@model UserStory;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddStory</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
         <a class="navbar-brand" href="/Home/Index">FanSite</a>


        <ul class="nav justify-content-center">
          <li class="nav-item">
            <a class="nav-link active" href="/Home/History">History</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Sources/Stories">Stories</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Sources/Sources">Sources</a>
          </li>
        </ul>
    </nav>

    <div class="text-center autoCenter">
        <h4>Thoughts, reflections, inspiration</h4>
        <br />
        <p>
            Share your story about Stravinsky. 
        </p>
        <br />
        <br />
        <form asp-controller="Sources" class="p-a-1" asp-action="post">
            <label asp-for="Name">Your name:</label>
            <input class="form-control" name="User" />
            <label asp-for="StoryPost">Story Post:</label>
            <textarea class="form-control" rows="4" name="StoryPost"></textarea>
            <br />
            <button class="btn btn-primary" type="submit">
                Submit story
            </button>
        </form>

        <br />
        <br />
        <p>
            Just kidding! Take me <a asp-action="/Home/Index">home</a>
        </p>
        
    </div>

</body>
</html>