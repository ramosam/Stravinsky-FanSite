@model String;
@{
    ViewData["Title"] = "Add a Reply";
}

<div>
    <h4>Thanks for helping!</h4>
    <br />
    <p>
        The question is:
        @Model

        Please provide all the relevant information that you can. 
    </p>
    <br />
    <br />
    <form asp-controller="Forum" class="p-a-1" asp-action="post">
        <label for="responder">Your username:</label>
        <input class="form-control" name="responder" />
        <label for="replyBody">Response:</label>
        <textarea class="form-control" rows="6" name="replyBody"></textarea>
        
        <br />
        <button class="btn btn-primary" type="submit">
            Submit question
        </button>
    </form>

    <br />
    <br />
    <p>
        Go back to the <a asp-action="/Forum/Forum">Forum</a>
    </p>
        
</div>