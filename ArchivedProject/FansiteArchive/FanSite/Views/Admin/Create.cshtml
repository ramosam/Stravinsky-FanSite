    ViewData["Title"] = "Create Account";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/Home/Index">FanSite</a>


    <ul class="nav justify-content-center">
        <li class="nav-item">
            <a class="nav-link active" href="/Home/History">History</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Sources/Stories">Stories</a>
