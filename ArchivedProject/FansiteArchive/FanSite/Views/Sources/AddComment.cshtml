  
@model String
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <title>Add a Comment</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
         <a class="navbar-brand" href="/Home/Index">FanSite</a>


         <ul class="nav justify-content-center">
             <li class="nav-item">
                 <a class="nav-link active" href="/Home/History">History</a>
             </li>
             <li class="nav-item">
                 <a class="nav-link" href="/Sources/Stories">Stories</a>
             </li>
             <li class="nav-item">
                 <a class="nav-link" href="/Sources/Sources">Sources</a>
             </li>
             <li class="nav-item">
                 <a class="nav-link" href="/Admin/Index">Admin</a>
             </li>
         </ul>
    </nav>
    <div class="text-center autoCenter">
        <h1>Comment for: </h1>
        <h3><em> @Model</em></h3>
    

        <form asp-action="post">
            <div class="form-group">
                <label for="user">Your name</label><br />
                <input name="user" /><br />
            </div>
            <div class="form-group">
                <label for="commenttext">Your comment</label><br />
                <textarea rows="4" type="text" name="commenttext"></textarea><br />
            </div>
            
            <br />
            <input type="submit" value="Enter" />
        </form>
    </div>
</body>
</html>