@model List<MediaRef>;
@{
    Layout = "_LayoutScandal";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sources</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
         <a class="navbar-brand" href="/Home/Index">FanSite</a>


         <ul class="nav justify-content-center">
             <li class="nav-item">
                 <a class="nav-link active" href="/Home/History">History</a>
             </li>
             <li class="nav-item">
                 <a class="nav-link" href="/Sources/Stories">Stories</a>
             </li>
             <li class="nav-item">
                 <a class="nav-link" href="/Sources/Sources">Sources</a>
             </li>
             <li class="nav-item">
                 <a class="nav-link" href="/Admin/Index">Admin</a>
             </li>
         </ul>
    </nav>


    <div class="text-center ">
        <h2>Stravinsky Sources</h2>
        <p>We now have @ViewData["latestMediaCount"]!</p>
        <br />
        <br />

            <table class="sourceTable table table-sm table-striped table-bordered ">
                <tr>
                    <th>Source</th>
                    <th>Link</th>
                
                </tr>
                @foreach (MediaRef mediaRef in Model)
                {
                    <tr>
                        <td>@mediaRef.SourceName</td>
                        <td><a href="@mediaRef.LinkURL">Link to site</a></td>
                    </tr>
                }

            </table>

    </div>

</body>
</html>